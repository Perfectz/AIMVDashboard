{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aimusicvideo.local/schemas/storyboard_sequence.json",
  "title": "Storyboard Sequence Schema",
  "description": "Defines which variation is selected for each shot and tracks rendered assets",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Version date in YYYY-MM-DD format"
    },
    "projectName": {
      "type": "string",
      "description": "Project name from bible/project.json"
    },
    "totalShots": {
      "type": "number",
      "description": "Total number of shots in sequence"
    },
    "totalDuration": {
      "type": "number",
      "description": "Total duration in seconds"
    },
    "musicFile": {
      "type": "string",
      "description": "Path to music file (relative to music/)"
    },
    "selections": {
      "type": "array",
      "description": "Shot selections and rendered asset tracking",
      "items": {
        "type": "object",
        "required": [
          "shotId",
          "shotNumber"
        ],
        "properties": {
          "shotId": {
            "type": "string",
            "pattern": "^SHOT_\\d{2,3}$",
            "description": "Shot identifier"
          },
          "shotNumber": {
            "type": "number",
            "description": "Sequential shot number"
          },
          "selectedVariation": {
            "type": "string",
            "enum": [
              "A",
              "B",
              "C",
              "D",
              "none"
            ],
            "description": "Which Kling variation selected (or 'none' if not chosen yet)"
          },
          "renderFiles": {
            "type": "object",
            "description": "Paths to rendered assets",
            "properties": {
              "kling": {
                "type": "object",
                "properties": {
                  "A": {
                    "type": "string"
                  },
                  "B": {
                    "type": "string"
                  },
                  "C": {
                    "type": "string"
                  },
                  "D": {
                    "type": "string"
                  }
                }
              },
              "nanobanana": {
                "type": "object",
                "properties": {
                  "firstFrame": {
                    "type": "string"
                  },
                  "lastFrame": {
                    "type": "string"
                  }
                }
              },
              "thumbnail": {
                "type": "string"
              }
            }
          },
          "timing": {
            "type": "object",
            "properties": {
              "start": {
                "type": "number"
              },
              "duration": {
                "type": "number"
              },
              "end": {
                "type": "number"
              },
              "musicSection": {
                "type": "string"
              }
            }
          },
          "notes": {
            "type": "string",
            "description": "Notes or comments about this shot"
          },
          "status": {
            "type": "string",
            "enum": [
              "not_rendered",
              "rendering",
              "rendered",
              "approved",
              "needs_revision"
            ],
            "description": "Production status"
          },
          "reviewStatus": {
            "type": "string",
            "enum": [
              "draft",
              "ready_for_review",
              "changes_requested",
              "approved"
            ],
            "description": "Editorial review status for this shot"
          },
          "assignee": {
            "type": "string",
            "description": "Person responsible for resolving feedback"
          },
          "comments": {
            "type": "array",
            "description": "Review comments on this shot",
            "items": {
              "type": "object",
              "required": [
                "text",
                "timestamp"
              ],
              "properties": {
                "text": {
                  "type": "string"
                },
                "timestamp": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "lastUpdated": {
      "type": "string",
      "description": "ISO timestamp of last update"
    }
  },
  "required": [
    "version",
    "selections"
  ]
}
