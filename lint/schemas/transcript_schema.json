{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aimusicvideo.local/schemas/transcript.json",
  "title": "Transcript Schema",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "segments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["start", "end", "speaker", "line"],
        "properties": {
          "start": { "type": "number" },
          "end": { "type": "number" },
          "speaker": { "type": "string" },
          "line": { "type": "string" },
          "notes": { "type": "string" }
        }
      }
    }
  },
  "required": ["version", "segments"]
}
