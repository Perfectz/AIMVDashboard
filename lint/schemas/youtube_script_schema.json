{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aimusicvideo.local/schemas/youtube_script.json",
  "title": "YouTube Content Script Schema",
  "description": "Content-first planning model separate from shot list and transcript",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "videoGoal": { "type": "string" },
    "targetAudience": { "type": "string" },
    "tone": { "type": "string" },
    "hook": { "type": "string" },
    "outline": {
      "type": "array",
      "items": { "type": "string" }
    },
    "segments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "goal"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^SEG_[0-9]{2,3}$"
          },
          "goal": { "type": "string" },
          "keyPoints": {
            "type": "array",
            "items": { "type": "string" }
          },
          "retentionBeat": { "type": "string" },
          "notes": { "type": "string" },
          "cta": { "type": ["string", "null"] }
        }
      }
    },
    "cta": { "type": "string" },
    "titleOptions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "thumbnailConcepts": {
      "type": "array",
      "items": { "type": "string" }
    },
    "descriptionDraft": { "type": "string" },
    "keywords": {
      "type": "array",
      "items": { "type": "string" }
    },
    "chapters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["timestamp", "label"],
        "properties": {
          "timestamp": {
            "type": "string",
            "pattern": "^(?:[0-5]?\\d:)?[0-5]\\d:[0-5]\\d$"
          },
          "label": { "type": "string" }
        }
      }
    }
  },
  "required": ["version", "videoGoal", "targetAudience", "hook", "segments", "cta", "titleOptions", "thumbnailConcepts"]
}
